{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "env": {
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "strict": 0,

    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "consistent-return": 2,
    "eqeqeq": [2, "allow-null"],
    "linebreak-style": [2, "unix"],
    "no-console": 1,
    "no-lone-blocks": 2,
    "no-sequences": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-unneeded-ternary": 2,
    "object-curly-spacing": [2, "always"],
    "quotes": [2, "double", "avoid-escape"],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, "never"],
    "keyword-spacing": [2,
    { "overrides": {
      "if": { "after": false },
      "for": { "after": false },
      "while": { "after": false },
      "catch": { "after": false },
      "switch": { "after": false }
    } }],

    "arrow-spacing": 2,
    "constructor-super": 2,
    "no-confusing-arrow": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-this-before-super": 2,
    "no-var": 2,
    "no-class-assign": 2,
    "prefer-const": 1,
    "prefer-reflect": 0,
    "prefer-spread": 1
  }
}
